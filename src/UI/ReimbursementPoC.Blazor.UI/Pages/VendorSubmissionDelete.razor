@page "/vendorSubmission/delete/{vendorSubmissionId}"
@using ReimbursementPoC.Blazor.UI.Model;
@inject HttpClient Http
@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize(Roles = "Admin")]
<h2>Delete Vendor Submission</h2>
<br />

<div class="form-group">
    <h4>Do you want to delete this Vendor Submission?</h4>
    <table class="table">
        <tbody>
            <tr>
                <td>ServiceId</td>
                <td>@service.ServiceId</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="form-group">
    <input type="submit" value="Delete" @onclick="(async () => await RemoveVendorSubmission(service.Id))" class="btn btn-danger" />
    <input type="submit" value="Cancel" @onclick="(() => Cancel())" class="btn btn-warning" />
</div>

@code {
    [Parameter]
    public string vendorSubmissionId { get; set; }
    VendorSubmissionDto service = new VendorSubmissionDto();

    protected override async Task OnInitializedAsync()
    {
        service = await Http.GetFromJsonAsync<VendorSubmissionDto>("/vendor/api/VendorSubmissions/" + vendorSubmissionId);
    }

    protected async Task RemoveVendorSubmission(Guid id)
    {
        var result = await Http.DeleteAsync("/vendor/api/VendorSubmissions/" + id);
        if (result.IsSuccessStatusCode)
        {

            NavigationManager.NavigateTo("/vendorSubmission/list");
        }
        else
        {
            
        }
    }

    void Cancel()
    {
        NavigationManager.NavigateTo("/vendorSubmission/list");
    }
}
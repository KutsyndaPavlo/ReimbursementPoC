@*@page "/program/{programId}/delete"
@using ReimbursementPoC.Blazor.UI.Model;
@inject HttpClient Http
@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize(Roles = "Admin")]
<h2>Delete Program</h2>
<br />

@if (!string.IsNullOrWhiteSpace(Notification))
{
    <div class="col-md-4 text-success">
        @Notification
    </div>
}
@if (!string.IsNullOrWhiteSpace(Error))
{
    <div class="col-md-4 text-danger">
        @Error
    </div>
}

<div class="form-group">
    <h4>Do you want to delete this Program?</h4>
    <table class="table">
        <tbody>
            <tr>
                <td>Name</td>
                <td>@program.Name</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>@program.Description</td>
            </tr>
            <tr>
                <td>State</td>
                <td>@program.State</td>
            </tr>
            <tr>
                <td>Start Date</td>
                <td>@program.StartDate</td>
            </tr>
            <tr>
                <td>End Date</td>
                <td>@program.EndDate</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="form-group">
    <input type="submit" value="Delete" @onclick="(async () => await RemoveProgram(program.Id))" class="btn btn-danger" />
    <input type="submit" value="Cancel" @onclick="(() => Cancel())" class="btn btn-warning" />
</div>

@code {
    [Parameter]
    public string programId { get; set; }
    public string Notification { get; set; }
    public string Error { get; set; }
    ProgramDto program = new ProgramDto();

    protected override async Task OnInitializedAsync()
    {
        program = await Http.GetFromJsonAsync<ProgramDto>("/administration/api/programs/" + programId);
    }

    protected async Task RemoveProgram(Guid id)
    {
        var result = await Http.DeleteAsync("/administration/api/programs/" + id);
        if (result.IsSuccessStatusCode)
        {
            Error = "";
            Notification = "Program was succesfully deleted";

            Task.Run(async () =>
            {
                await Task.Delay(TimeSpan.FromSeconds(3));
                NavigationManager.NavigateTo("/program/list");
            });
        }
        else
        {
            Error = $"Error: {await result.Content.ReadAsStringAsync()}";
        }
    }

    void Cancel()
    {
        NavigationManager.NavigateTo("/program/list");
    }
}*@